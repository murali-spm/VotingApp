@model Voting.Common.DTO.VoterDTO
@{
    ViewData["Title"] = "Voter - Add";
}

<form asp-controller="voter" asp-action="addvoter" method="post">
    <div class="container">
        <div class="row ">
            <div class="col-12 heightSpace"></div>
        </div>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 tableHeader fw-bold  text-center">Add Voter</div>
            <div class="col-4"></div>
        </div>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4 ">
                <div class="row topMarginSpace">
                    <div class="col-4 fw-bold">Name</div>
                    <div class="col-8"> @Html.TextBoxFor(x => x.Name, new { @class="formText", required="required", maxlength="50"}) </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
        <div class="row ">
            <div class="col-12 lowHeightSpace"></div>
        </div>
        <div class="row  topMarginSpace">
            <div class="col-4"></div>
            <div class="col-4 fw-bold text-center">
                <button type="submit"  class="btn btn-primary">Save</button>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>
